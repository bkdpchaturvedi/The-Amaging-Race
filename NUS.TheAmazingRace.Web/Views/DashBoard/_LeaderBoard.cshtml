@model IEnumerable<NUS.TheAmagingRace.DAL.Team>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="leaderBoard">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Distance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NextPitStop)
        </th>

    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>

        <td id="@("distance_" + item.TeamID)">
            @Html.DisplayFor(modelItem => item.Distance)
        </td>
        <td id="@("time_" + item.TeamID)">
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td id="@("nextPit_" + item.TeamID)">
            @Html.DisplayFor(modelItem => item.NextPitStop)
        </td>

    </tr>
    }

</table>
