@using Microsoft.AspNet.Identity
@using NUS.TheAmagingRace.DAL.Extensions

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li style="cursor: pointer;" onclick="document.location='Manage/Index';return false;">
                   <img  class="img-circle" src="@Url.Content(User.Identity.GetImagePath())" alt="@User.Identity.GetUserDisplayName()" height="50" width="50" />
              
                    
            </li>
            <li>
                @Html.ActionLink(User.Identity.GetUserDisplayName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}   
else
{

    <div class="navbar-collapse collapse">
        <ul class="nav nav-divider navbar-nav  navbar-right ">
            <li><a href='@Url.Action("Register", "Account")'><span class="glyphicon glyphicon-user"></span> Register</a></li>
            <li><a href='@Url.Action("Login", "Account")'><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        </ul>
    </div>

